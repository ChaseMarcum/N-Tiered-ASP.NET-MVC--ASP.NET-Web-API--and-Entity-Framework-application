        <legend style="margin-bottom: -30px;">Personal Information</legend>

        <div class="row">
            <div class="form-group">
                <div class="form-group">
                    <div class="col-lg-4 col-md-4">
                        <div class="form-group">
                            <label>First name: *</label>
                            <input data-bind="User: FirstName" name="User.FirstName" type="text" class="required col-lg-12 col-md-12">
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4">
                        <div class="form-group">
                            <label>Middle name: *</label>
                            <input data-bind="User: MiddleName" name="User.MiddleName" type="text" class="required col-lg-12 col-md-12">
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4">
